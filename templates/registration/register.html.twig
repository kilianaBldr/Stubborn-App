{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

<main class="loginForm">
   <section class="register">

   <h1>S'inscrire</h1>

   {{ form_errors(registrationForm) }}

   {{ form_start(registrationForm) }}
   <div class="form-group">
   {{ form_label(registrationForm.name, "Nom d'utilisateur:") }}
   {{ form_widget(registrationForm.name) }}
   {{ form_errors(registrationForm.name) }} 
   </div> 
   <div class="form-group">
   {{ form_label(registrationForm.email, "Adresse e-mail:") }}
   {{ form_widget(registrationForm.email) }}
   {{ form_errors(registrationForm.email) }} 
   </div> 
   <div class="form-group"> 
   {{ form_label(registrationForm.deliveryAddress, "Adresse de livraison:") }} 
   {{ form_widget(registrationForm.deliveryAddress) }} 
   {{ form_errors(registrationForm.deliveryAddress) }} 
   </div> 
   <div class="form-group"> 
   {{ form_label(registrationForm.plainPassword, "Mot de passe:") }} 
   {{ form_widget(registrationForm.plainPassword) }} 
   {{ form_errors(registrationForm.plainPassword) }} 
   </div> 
   <div class="form-group"> 
   {{ form_label(registrationForm.plainPasswordConfirm, "Confirmez votre mot de passe:") }} 
   {{ form_widget(registrationForm.plainPasswordConfirm) }} 
   {{ form_errors(registrationForm.plainPasswordConfirm) }} 
   </div> <button type="submit" class="btn"> Créer un compte </button> 
   {{ form_end(registrationForm) }} 
   <div> 
   <p> Déjà inscrit ?</p> 
   <button><a href=" {{path('app_login')}} "> Connectez-vous !</a></button> 
   </div> 
   </section> 
   </main>
{% endblock %}
