{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Affichage des erreurs -->
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <div class="card shadow p-4">
                <h2 class="text-center mb-4 fw-bold">S'inscrire</h2>

                {{ form_start(registrationForm) }}
                    <div class="mb-3">
                        {{ form_label(registrationForm.name, "Nom d'utilisateur:", {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.name) }}
                    </div> 

                    <div class="mb-3">
                        {{ form_label(registrationForm.email, "Adresse e-mail:", {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.email) }}
                    </div> 

                    <div class="mb-3">
                        {{ form_label(registrationForm.deliveryAddress, "Adresse de livraison:", {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(registrationForm.deliveryAddress, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.deliveryAddress) }}
                    </div> 

                    <div class="mb-3">
                        {{ form_label(registrationForm.password, "Mot de passe:", {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.password) }}
                    </div> 

                    <div class="mb-3">
                        {{ form_label(registrationForm.confirmPassword, "Confirmer le mot de passe:", {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(registrationForm.confirmPassword, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.confirmPassword) }}
                    </div> 

                    <button type="submit" class="btn btn-primary w-100 py-2">Créer un compte</button>
                {{ form_end(registrationForm) }} 

                <div class="text-center mt-3">
                    <p>Déjà inscrit ?</p>
                    <a href="{{ path('app_login') }}" class="btn btn-outline-primary w-100">Se connecter</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}