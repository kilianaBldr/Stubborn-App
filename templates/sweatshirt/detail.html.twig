{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/sweatshirtDetail.css') }}">
{% endblock %}

{% extends 'base.html.twig' %} 

{% block title %}Détail du Sweatshirt{% endblock %} 

{% block body %} 
    <div class="container"> 
        <h1>{{ sweatshirt.name }}</h1> 
        
        <div class="sweatshirt-detail">
            <img src="{{ asset('uploads/images/sweatshirts/' ~ sweatshirt.imageName) }}" alt="{{ sweatshirt.name }}" class="sweatshirt-image">
            
            <div class="sweatshirt-info"> 
                <p><strong>Prix :</strong> {{ sweatshirt.price }} €</p>

                {% if sweatshirt.stockXS > 0 or sweatshirt.stockS > 0 or sweatshirt.stockM > 0 or sweatshirt.stockL > 0 or sweatshirt.stockXL %}
                    <form action="{{'app_cart_add'}}" method="POST">
                        <input type="hiden" name="id" value="{{ sweatshirt.id }}">

                        <label for="size">Choisir un taille :</label>
                        <select name="size" id="size" required>
                            {% if sweatshirt.stockXS > 0 %}<option value="XS">XS</option>{% endif %}
                            {% if sweatshirt.stockS > 0 %}<option value="S">S</option>{% endif %}
                            {% if sweatshirt.stockM > 0 %}<option value="M">M</option>{% endif %}
                            {% if sweatshirt.stockL > 0 %}<option value="L">L</option>{% endif %}
                            {% if sweatshirt.stockXL > 0 %}<option value="XL">XL</option>{% endif %}
                        </select>

                        <button type="submit" class="btn">Ajouter au panier</button>
                    </form>
                    {% else %}
                        <p class="out-of-stock">Cet article est en ruture de stock.</p>
                    {% endif %}
                    <a href="{{ path('app_products')}}" class="btn">Retour à la boutique</a>
                
{% endblock %}